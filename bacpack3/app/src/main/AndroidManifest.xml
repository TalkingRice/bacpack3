<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.zilunlin.bacpack">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".network.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Generic.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Generic.LoginActivity">
        </activity>
        <activity android:name=".Generic.DetailActivity">
        </activity>
        <activity android:name=".Generic.UpdateActivity">
        </activity>
        <activity android:name=".Generic.ApprovalActivity">
        </activity>
        <activity android:name=".Generic.JoinedActivity">
        </activity>
        <activity android:name=".Generic.Dashboard">
        </activity>
        <activity android:name=".Generic.Upload">
        </activity>
        <activity android:name=".Generic.TodoActivity">
        </activity>
        <activity android:name=".Generic.GradeActivity">
        </activity>
        <activity android:name=".Generic.TimetableActivity">
        </activity>
        <activity android:name=".Generic.UserProfileActivity">
        </activity>
        <activity android:name=".Generic.UserEventsActivity">
        </activity>
        <activity android:name=".PriceDialogActivity"
                  android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"
                  android:excludeFromRecents="true">
        </activity>
    </application>

</manifest>