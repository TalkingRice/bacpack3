<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zilunlin.bacpack.Generic.Upload"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your own event"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.502"
        />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="156dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintRight_toLeftOf="@+id/textView3"
        android:layout_marginRight="0dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"/>

    <EditText
        android:id="@+id/descripText"
        android:layout_width="311dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="@+id/nameText"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/nameText"/>

    <EditText
        android:id="@+id/dateTimeText"
        android:layout_width="253dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="double-click to set time"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/descripText"
        app:layout_constraintTop_toBottomOf="@+id/descripText"/>

    <Switch
        android:id="@+id/recurring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:checked="true"
        app:buttonTint="#3dc688"
        app:layout_constraintBottom_toBottomOf="@+id/dateTimeText"
        app:layout_constraintLeft_toRightOf="@+id/dateTimeText"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        app:layout_constraintLeft_toLeftOf="@+id/nameText"
        app:layout_constraintBottom_toTopOf="@+id/nameText"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        app:layout_constraintBottom_toTopOf="@+id/descripText"
        app:layout_constraintLeft_toLeftOf="@+id/descripText"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and Time"
        app:layout_constraintLeft_toLeftOf="@+id/dateTimeText"
        app:layout_constraintBottom_toTopOf="@+id/dateTimeText"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        app:layout_constraintLeft_toLeftOf="@+id/locationText"
        app:layout_constraintBottom_toTopOf="@+id/locationText"/>

    <EditText
        android:id="@+id/locationText"
        android:layout_width="158dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/dateTimeText"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/dateTimeText"/>

    <EditText
        android:id="@+id/typeText"
        android:layout_width="142dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/nameText"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/nameText"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        app:layout_constraintLeft_toLeftOf="@+id/typeText"
        app:layout_constraintBottom_toTopOf="@+id/typeText"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recurring"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/recurring"
        app:layout_constraintLeft_toLeftOf="@+id/recurring"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toTopOf="@+id/priceText"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/priceText"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="214dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#3dc688"
        android:text="Submit"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationText"/>

    <EditText
        android:id="@+id/priceText"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/locationText"
        app:layout_constraintLeft_toRightOf="@+id/locationText"/>

</android.support.constraint.ConstraintLayout>
