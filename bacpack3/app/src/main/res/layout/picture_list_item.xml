<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/card_image"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_event_name"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="104dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/stop"
        android:id="@+id/card_approval"
        android:tint="#ff0000"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/card_event_type"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/card_event_name"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/checkmark"
        android:id="@+id/card_join_event"
        android:scaleType="fitXY"
        android:background="@null"
        android:tint="#1ad1ff"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_image"
        app:layout_constraintVertical_bias="0.44"/>

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_date"
        app:layout_constraintTop_toBottomOf="@+id/card_event_name"
        app:layout_constraintLeft_toLeftOf="@+id/card_event_name"
        android:layout_marginTop="8dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_event_type"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/card_event_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/card_event_name"/>

</android.support.constraint.ConstraintLayout>